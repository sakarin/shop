<table>
  <tr>
    <td><label><%=t("name")%></label></td>
    <td><%= text_field :store, :name, {"style" => "width:200px"} %></td>
  </tr>
  <tr>
    <td><label><%=t("code")%></label></td>
    <td><%= text_field :store, :code, {"style" => "width:50px"} %></td>
  </tr>

  <tr>
    <td><label><%= t("shop_for_vip") %></label></td>
    <td>
      <label class="sub">
        <%= radio_button(:store, :shop_for_vip, true ) %>
        <%= t("yes") %>
      </label> &nbsp;
      <label class="sub">
        <%= radio_button(:store, :shop_for_vip, false ) %>
        <%= t("no") %>
      </label>
    </td>
  </tr>
  <tr>
    <td><label><%= t("allow_user_login") %></label></td>
    <td>
      <label class="sub">
        <%= radio_button(:store, :allow_user_login, true ) %>
        <%= t("yes") %>
      </label> &nbsp;
      <label class="sub">
        <%= radio_button(:store, :allow_user_login, false ) %>
        <%= t("no") %>
      </label>
    </td>
  </tr>

  <tr>
    <td><label><%=t("send_mails_as")%></label></td>
    <td><%= text_field :store, :email, {"style" => "width:200px"} %></td>
  </tr>
  <tr>
    <td><label><%=t("mail_username")%></label></td>
    <td><%= text_field :store, :mail_username, {"style" => "width:200px"} %></td>
  </tr>
  <tr>
    <td><label><%=t("mail_password")%></label></td>
    <td><%= text_field :store, :mail_password, {"style" => "width:200px"} %></td>
  </tr>
  <tr>
    <td><label><%=t("domains")%></label></td>
    <td><%= text_area :store, :domains, {"style" => "width:400px; height: 120px;"} %></td>
  </tr>
  <tr>
    <td><label><%= t("default_seo_title") %></label></td>
    <td><%= text_area :store, :seo_title,  {"style" => "width:400px; height: 120px;"}  %></td>
  </tr>
</table>
