<%  @order = current_order(true)  %>
<% ship_price = 0  %>
<% sum_quantity = 0 %>
<% item_no = 1 %>

<% unless @order.line_items.empty? %>
   <% @order.line_items.each do |line_item| %>
        <% if item_no == 1 %>
            <% ship_price = 8 %>
        <% else %>
            <% ship_price = ship_price + 6 %>
        <% end %>
        <% item_no = item_no + 1 %>
   <% end %>
<% end %>


<div class="shopping_cart2">
  <p><%= link_to "Shopping Cart", cart_path %></p>
  <div><img src="/assets/shop1/line-shopping-cart.png" width="259" height="1"/></div>
  <div class="space_bottom_top">Product Price.<strong class="float_right"><%= number_to_currency @order.item_total  %></strong></div>
  <div><img src="/assets/shop1/line-shopping-cart.png" width="259" height="1"/></div>
  <div class="space_bottom_top">Shipping Price.<strong class="float_right"><%#= number_to_currency(ship_price) %><span style="color: #8b0000;">Free</span></strong></div>
  <div><img src="/assets/shop1/line-shopping-cart.png" width="259" height="1"/></div>
  <div class="space_bottom_top">Total Price.<strong class="float_right"><%= order_subtotal(@order) %></strong></div>
</div>