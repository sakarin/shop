
<%= render :partial => 'spree/admin/shared/order_tabs', :locals => {:current => 'Refund Orders'} %>

<% #if %w(purchased received).include?(@order.state) %>



    <%= form_for :refund, :url => admin_order_refunds_path(@order), :method => :post do |f| %>
        <%= render :partial => 'form', :locals => {:f => f} %>

        <div data-hook="admin_order_new_form_buttons">
          <p class="form-buttons">
            <%= button t(:update) %>
            <%= t(:or) %> <%= link_to t(:back), admin_orders_url %>
          </p>
        </div>
    <% end %>
<% #end %>