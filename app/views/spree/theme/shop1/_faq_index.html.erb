<div id="content">
  <div id="body_content">
    <div class="top-box-960"></div>
    <div class="title-960">
      <h1><%= t('frequently_asked_questions') %></h1>
    </div>
    <div class="content-960">
      <div id="faqs">
        <% @categories.each do |category| %>
            <div id="<%= dom_id category -%>" class="category">
              <h2><%= h category.name %></h2>
              <ul class="answers">
                <% category.questions.each do |question| %>
                    <li>
                      <a class="question" id="<%= dom_id question -%>" href="#<%= "answer_#{question.id}" %>">
                        <%= h question.question -%>
                      </a>
                      <div class="answer" id="<%= "answer_#{question.id}"-%>">
                        <%= question.answer %>
                      </div>
                    </li>
                <% end %>
              </ul>
            </div>
        <% end %>
      </div>
    </div>
    <div class="footer-960"></div>
  </div>
</div>