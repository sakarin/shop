<div class='toolbar'>
  <ul class='actions'>
    <li id="new_question_category_link">
      <%= button_link_to t("new_question_category"),
                         new_object_url,
                         {:remote => :true, :icon => 'add', :id => 'admin_new_question_category'} %>
    </li>
  </ul>
  <br class='clear'/>
</div>
<div id="new_question_category" data-hook></div>

<h1><%= t("question_categories") %></h1>
<table class="index">
  <thead>
  <tr>
    <th><%= t("category") %></th>
    <th><%= t("questions") %></th>

    <th>

    </th>
  </tr>
  </thead>
  <% @question_categories.each do |category| %>
      <tr id="<%= dom_id category %>">
        <%- locals = {:category => category} %>

        <td><%= h category.name %></td>
        <td><%= category.questions.count %></td>

        <td class="actions">

          <%= link_to_edit category %>&nbsp;
          <%= link_to_delete category %>

        </td>
      </tr>
  <% end %>

</table>
